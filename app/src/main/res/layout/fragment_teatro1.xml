<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.juddyreina.oiste.teatro1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/beige"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/baseLayout2"
                >
                <TextView
                    style="@style/TexSubTitle"
                    android:textSize="150sp"
                    />
                <TextView
                    style="@style/TexTitle2"
                    android:text="@string/teatro_section1"
                    android:textSize="45sp"
                    />
                <TextView
                    style="@style/TexSubTitle"
                    android:text="José Gutiérrez Gómez"
                    android:textColor="@color/teal"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teatro1"
                    />
                <TextView
                    style="@style/TexSubTitle"
                    android:text="@string/contacto"
                    />
                <TextView
                    style="@style/TexSubTitle"
                    android:text=" 232 45 97 | 232 85 36"
                    android:textColor="@color/teal"
                    />
                <TextView
                    style="@style/TexSubTitle"
                    android:text="Ext. 108"
                    android:textColor="@color/teal"
                    />
                <TextView
                    style="@style/TexSubTitle"
                    android:text="lfsanchez@teatrometropolitano.com"
                    android:textColor="@color/teal"
                    android:textSize="20sp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teatro11"
                    />
            </LinearLayout>
        </ScrollView>

        <TextView
            style="@style/TexSubTitle"
            android:text="@string/ubicacion"
            />

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>
